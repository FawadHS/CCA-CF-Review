<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="false" />
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <handlers>
      <add name="iisnode" path="server/start.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <rule name="HTTPS Redirect" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" />
        </rule>

        <!-- Block Sensitive Paths -->
        <rule name="Block Sensitive" stopProcessing="true">
          <match url="^server/(data|config)/" />
          <action type="CustomResponse" statusCode="403" statusReason="Forbidden" />
        </rule>

        <!-- API Routes -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)$" />
          <action type="Rewrite" url="server/start.js" />
        </rule>

        <!-- Static Files -->
        <rule name="Static Content" stopProcessing="true">
          <match url="^(?!api|server)(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="client/build/{R:1}" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="client/build/{R:1}" />
        </rule>

        <!-- SPA Fallback -->
        <rule name="SPA Routes" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api|^/server" negate="true" />
          </conditions>
          <action type="Rewrite" url="client/build/index.html" />
        </rule>
      </rules>
    </rewrite>

    <iisnode 
      nodeProcessCommandLine="node.exe"
      nodeProcessEnvironment="NODE_ENV=production;PORT=8080"
      watchedFiles="web.config;server/*.js"
      loggingEnabled="true"
      debuggingEnabled="false" />

    <security>
      <requestFiltering removeServerHeader="true">
        <hiddenSegments>
          <add segment="server/data" />
          <add segment="server/config" />
          <add segment="node_modules" />
          <add segment="private" />
        </hiddenSegments>
        <fileExtensions>
          <add fileExtension=".json" allowed="false" />
          <add fileExtension=".log" allowed="false" />
          <add fileExtension=".config" allowed="false" />
          <add fileExtension=".env" allowed="false" />
        </fileExtensions>
        <verbs>
          <add verb="TRACE" allowed="false" />
          <add verb="OPTIONS" allowed="false" />
        </verbs>
      </requestFiltering>
    </security>

    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';" />
        <add name="Permissions-Policy" value="accelerometer=(), camera=(), geolocation=(), microphone=()" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>