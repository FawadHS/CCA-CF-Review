{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "warn",
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-empty": "warn",
    "max-len": ["warn", { "code": 120 }],
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "no-undef": "warn"
  },
  "globals": {
    "fs": "writable",
    "require": "readonly",
    "process": "readonly",
    "__dirname": "readonly",
    "module": "readonly"
  }
}