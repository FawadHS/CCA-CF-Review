{
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "eqeqeq": "error",
      "no-unused-vars": "warn",
      "no-empty": "warn",
      "max-len": ["error", { "code": 120 }],
      "indent": ["error", 2],
      "semi": ["error", "always"]
    }
  }
