{
  "name": "cca-cf-survey-server",
  "version": "1.0.0",
  "description": "Backend for CCA-CF Survey Application",
  "main": "start.js",
  "scripts": {
    "start": "node start.js",
    "dev": "nodemon start.js",
    "lint": "eslint .",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["survey", "UN", "backend"],
  "author": "UN Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7", 
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  }
}