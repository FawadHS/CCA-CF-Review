{
    "name": "cca-cf-survey",
    "version": "1.0.0",
    "description": "CCA-CF Survey Application for UN Development Frameworks",
    "main": "server/start.js",
    "engines": {
      "node": ">=18.0.0"
    },
    "scripts": {
      "start": "node server/start.js",
      "dev": "nodemon server/start.js",
      "test": "jest",
      "lint": "eslint .",
      "prepare": "husky install"
    },
    "keywords": [
      "survey",
      "UN",
      "development",
      "framework"
    ],
    "author": "UN Development Team",
    "license": "MIT",
    "dependencies": {
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
      "eslint": "^8.45.0",
      "husky": "^8.0.3",
      "jest": "^29.6.1",
      "nodemon": "^3.0.1"
    },
    "jest": {
      "testEnvironment": "node",
      "coveragePathIgnorePatterns": [
        "/node_modules/"
      ]
    },
    "eslintConfig": {
      "extends": "eslint:recommended",
      "env": {
        "node": true,
        "es2021": true,
        "jest": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "rules": {
        "no-console": "off"
      }
    }
  }